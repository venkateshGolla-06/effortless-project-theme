{% liquid

 current_variant = product.selected_or_first_available_variant
 assign featured_image = current_variant.image | default: product.featured_image
 secondary_image= product.images[1] | default: product.featured_image
 discountAmount = current_variant.compare_at_price | minus: current_variant.price 
 discountPercentage = discountAmount| times: 100 | divided_by: current_variant.compare_at_price

%}

<div >
  <img src="{{  featured_image | image_url }}" height="auto" width="auto" /> 
  <p>{{ discountAmount }}</p>
  <p>{{ discountPercentage }}</p>

</div>